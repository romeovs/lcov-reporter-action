{
	"name": "lcov-reporter-action",
	"version": "0.3.0",
	"description": "Comments on a pull request with a lcov code coverage report",
	"license": "MIT",
	"author": "Steffen Koette",
	"repository": "https://github.com/Nef10/lcov-reporter-action",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --passWithNoTests --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.2.7",
		"@actions/github": "^4.0.0",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.13.16",
		"@babel/node": "^7.13.13",
		"@babel/preset-env": "^7.13.15",
		"@rollup/plugin-commonjs": "^11.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"babel-jest": "^26.6.3",
		"core-js": "3",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"regenerator-runtime": "^0.13.3",
		"rollup": "^1.32.1",
		"rollup-plugin-node-externals": "^2.2.0"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"useBuiltIns": "usage",
					"corejs": 3
				}
			]
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.js",
			"<rootDir>/src/**/*_test.js"
		]
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"trailingComma": "all"
	}
}
