{
	"name": "lcov-reporter-action",
	"version": "0.2.19",
	"description": "Comments a pull request with the lcov code coverage",
	"license": "MIT",
	"author": "Romeo Van Snick",
	"repository": "https://github.com/romeovs/lcov-reporter-action",
	"keywords": [
		"actions",
		"pull-request",
		"comment",
		"message"
	],
	"main": "index.js",
	"scripts": {
		"build": "rollup -c",
		"test": "jest --coverage",
		"local": "babel-node src/cli",
		"format": "prettier --write src/*.js src/**/*.js"
	},
	"dependencies": {
		"@actions/core": "^1.2.0",
		"@actions/github": "^1.1.0",
		"builtin-modules": "^3.3.0",
		"lcov-parse": "^1.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.8.6",
		"@babel/node": "^7.8.4",
		"@babel/preset-env": "^7.12.11",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-json": "^4.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@rollup/plugin-typescript": "^11.1.2",
		"@types/jest": "^29.5.2",
		"@types/lcov-parse": "^1.0.0",
		"babel-jest": "^25.1.0",
		"core-js": "3",
		"jest": "^29.1.1",
		"prettier": "^1.19.1",
		"regenerator-runtime": "^0.13.3",
		"rollup": "^1.32.0",
		"rollup-plugin-node-externals": "^2.1.3",
		"ts-jest": "^29.1.1",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"useBuiltIns": "usage",
					"corejs": 3
				}
			]
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/*_test.ts",
			"<rootDir>/src/**/*_test.ts"
		],
		"preset": "ts-jest"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"trailingComma": "all"
	}
}
